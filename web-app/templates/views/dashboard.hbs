            var ctx = document.getElementById('dividends').getContext('2d');
            var dividends = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [
                        'JANEIRO',
                        'FEVEREIRO',
                        'MARÇO',
                        'ABRIL',
                        'MAIO',
                        'JUNHO',
                        'JULHO',
                        'AGOSTO',
                        'SETEMBRO',
                        'OUTUBRO',
                        'NOVEMBRO',
